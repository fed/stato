// http://eslint.org/docs/rules/
{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "classes": true
    }
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "after": true,
    "afterEach": true,
    "before": true,
    "beforeEach": true,
    "describe": true,
    "it": true,
    "sinon": true,
    "require": true
  },
  "rules": {
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "camelcase": [2, {"properties": "never"}],
    "comma-dangle": [2, "never"],
    "comma-style": [2, "last"],
    "consistent-this": [2, "self"],
    "curly": [2, "all"],
    "eqeqeq": 0,
    "indent": [1, 2, {"SwitchCase": 1}],
    "key-spacing": 0,
    "keyword-spacing": 1,
    "lines-around-comment": [2, {"afterBlockComment": false, "afterLineComment": false}],
    "max-depth": [2, 3],
    "max-nested-callbacks": [1, 3],
    "max-params": [2, 5],
    "new-cap": [1, { "capIsNewExceptions": ["Map", "List"] }],
    "newline-after-var": [1, "always"],
    "no-bitwise": 2,
    "no-caller": 2,
    "no-dupe-keys": 2,
    "no-empty": 1,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-spaces": 0,
    "no-multiple-empty-lines": 2,
    "no-new": 2,
    "no-trailing-spaces": 2,
    "no-undef": 1,
    "no-unused-vars": 1,
    "no-use-before-define": [2, "nofunc"],
    "one-var": [2, {"initialized": "never"}],
    "operator-linebreak": [2, "after"],
    "quotes": [1, "single"],
    "semi": [2, "always"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "space-before-blocks": [2, "always"],
    "space-infix-ops": 2,
    "space-return-throw-case": 0,
    "strict": [2, "global"],
    "valid-jsdoc": 1,
    "yoda": [2, "never"],
  }
}
